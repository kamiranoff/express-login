{
  "name": "express-babel",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm run -s build",
    "start-build": "NODE_ENV=production node dist/index.js",
    "start": "nodemon server/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel server -s -D -d dist",
    "test-watch": "jest --watch --verbose",
    "test": "jest --verbose",
    "lint": "esw -w server test"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "pug": "^2.0.0-rc.2",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-register": "^6.24.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-watch": "^3.1.2",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|shallow))\\.jsx?$"
  },
  "bugs": {
    "url": "https://github.com/vmasto/express-babel/issues"
  },
  "homepage": "https://github.com/vmasto/express-babel#readme",
  "directories": {
    "test": "test"
  }
}
